<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignupActivity" >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"

        android:layout_marginRight="20dp">

        <RadioButton
            android:id="@+id/rbtn_ctm"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/button_clicked"
            android:buttonTint="#FF9800"
            android:checked="true"
            android:fontFamily="@font/nsrb"
            android:text="@string/signup_ctm"
            android:padding="10dp"/>

        <RadioButton
            android:id="@+id/rbtn_dsg"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:background="@drawable/button_clicked"
            android:fontFamily="@font/nsrb"
            android:text="@string/signup_dsg"
            android:padding="10dp"/>
    </RadioGroup>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/nsrb"
        android:text="이름"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:textSize="12dp"
        android:inputType="textPersonName"
        android:fontFamily="@font/nsrb"
        android:hint="이름(실명)을 입력해주세요"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/nsrb"
        android:text="이메일"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:textSize="12dp"
        android:inputType="textPersonName"
        android:fontFamily="@font/nsrb"
        android:hint="id@salong.com"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/nsrb"
        android:text="비밀번호"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:textSize="12dp"
        android:inputType="textPersonName"
        android:fontFamily="@font/nsrb"
        android:hint="영문+숫자 조합 8자리 이상 입력해주세요"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/nsrb"
        android:text="비밀번호"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/editTextTextPersonName4"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:textSize="12dp"
        android:fontFamily="@font/nsrb"
        android:inputType="textPersonName"
        android:hint="비밀번호를 한번 더 입력해주세요"
        android:textColor="#000000" />

    <CheckBox
        android:id="@+id/checkBox5"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/nsrb"
        android:textSize="10dp"
        android:text="@string/signup_policy"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#FF9800"
            android:layout_margin="24px"
            android:text="회원가입"
            android:textColor="#FFFFFF" />
    </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>