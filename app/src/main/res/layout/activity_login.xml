<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".LoginActivity">

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="match_parent"
      android:layout_height="100dp"
      android:layout_gravity="center"
      android:layout_marginTop="40dp"
      app:srcCompat="@drawable/logo_orange" />


    <EditText
        android:id="@+id/editTextTextEmailAddress2"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="36dp"
        android:layout_gravity="center"
        android:background="@drawable/loginbutton"
        android:inputType="textEmailAddress"
        android:paddingHorizontal="48px"
        android:hint="아이디"
        android:fontFamily="@font/nsrb"
        android:layout_marginHorizontal="30dp"
        android:textColor="#000000"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editTextTextPassword3"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="30dp"
        android:layout_gravity="center"
        android:background="@drawable/loginbutton"
        android:ems="10"
        android:paddingHorizontal="48px"
        android:hint="비밀번호"
        android:fontFamily="@font/nsrb"

        android:inputType="textPassword"
        android:textColor="#000000"
        android:textSize="14sp"
     />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="16dp"
        android:background="@drawable/loginbutton1"
        android:fontFamily="@font/nsrb"
        android:text="로그인"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_gravity="center"
     />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/checkbox_login"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_marginLeft="30dp"
        android:fontFamily="@font/nsrb"
        android:text="로그인 상태 유지"
        android:textSize="12dp" />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
    ></TextView>

    <Button
        android:id="@+id/button2"
        android:layout_height="match_parent"
        android:layout_width="80dp"
        android:background="@android:color/transparent"
        android:onClick="btnID"
        android:textSize="12dp"
        android:fontFamily="@font/nsrb"
        android:text="아이디 찾기" />
    <Button
        android:id="@+id/button"
        android:layout_height="match_parent"
        android:layout_width="80dp"
        android:background="@android:color/transparent"
        android:layout_marginRight="30dp"
        android:onClick="btnPW"
        android:textSize="12dp"
        android:fontFamily="@font/nsrb"
        android:text="비밀번호 찾기"
        />
</LinearLayout>
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="20dp"
        android:text="SNS 연동"
        android:fontFamily="@font/nsrb"
        android:layout_gravity="center"
        android:textSize="18dp"
        android:textColor="#000000"/>
    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_gravity="center"

        android:background="@drawable/sns_logo"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nsrb"
        android:text="아직 회원이 아니신가요?"
        android:textSize="12dp"
        android:layout_gravity="center"/>


    <Button
        android:id="@+id/btn_signup"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="32dp"
        android:layout_gravity="center"
        android:background="@drawable/orange_round_border"
        android:fontFamily="@font/nsrb"
        android:text="회원가입"
        android:textColor="#FF9800"
        android:textSize="14dp"
        android:textStyle="bold"

        />


</LinearLayout>