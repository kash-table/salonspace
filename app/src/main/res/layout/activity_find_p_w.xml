<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FindPW">

    <TextView

        android:id="@+id/toolbar"
        android:drawableLeft="@drawable/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="비밀번호 찾기"
        android:textSize="18dp"
        android:drawableRight="@drawable/exit"
        android:drawablePadding="15px"

        android:gravity="center"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/textView9"
        android:textColor="#000000"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="8dp"
        android:textSize="18dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:text="가입하신 이름과 연락처를 입력해주세요." />

    <TextView
        android:padding="5dp"
        android:textSize="12dp"
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:gravity="center"
        android:lineSpacingExtra="8px"
        android:text="회원가입시 입력한 비밀번호를 잊으셨나요?\n빈칸에 해당하는 정보를 입력하시면\n새로운 비밀번호를 설정 가능한 링크를 보내드립니다." />
    <TextView
        android:textSize="16dp"
        android:layout_marginHorizontal="32dp"
        android:id="@+id/textView14"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="아이디" />

    <EditText
        android:id="@+id/email3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="12dp"
        android:layout_marginHorizontal="32dp"
        android:hint="아이디를 입력하시오." />
    <TextView
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="24dp"
        android:textSize="16dp"
        android:textColor="#000000"
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이름"
        />

    <EditText
        android:id="@+id/name3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="12dp"
        android:layout_marginHorizontal="32dp"
        android:hint="이름(실명)을 입력해주세요." />

    <TextView
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="32dp"
        android:id="@+id/textView13"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="연락처" />

    <EditText
        android:id="@+id/contact3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="12dp"
        android:layout_marginHorizontal="32dp"
        android:hint="010-0000-0000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/btn_signup"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="32dp"
        android:layout_gravity="center"
        android:background="@drawable/orange_round_border"
        android:text="확인"
        android:onClick="mOnPopupClickk"
        android:textColor="#FF9800"
        android:textSize="14dp"
        android:textStyle="bold"

        />

</LinearLayout>